<h1>Transactions by <%=@transaction_type%></h1>
<table>
  <tr><%sum = 0%>
  <th>Merchant</th><th>Transaction Type</th><th>Transaction Amount</th><th>Transaction Time</th>
  </tr>
  <%@transactions = @transactions.sort_by {|transaction| transaction.amount} %>
  <% for transaction in @transactions %>
  <tr>
    <td><%= transaction.merchant.name %></td>
    <td><%= transaction.tag.type %></td>
    <td>£<%='%.2f' % transaction.amount%></td>
    <%sum += transaction.amount%>
    <td><%=transaction.transaction_time%></td>
  </tr>
  <% end %>
  <tfoot><td></td><td>Total</td>
  <td>£<%= '%.2f' % sum%></td></tfoot>
 </table>
