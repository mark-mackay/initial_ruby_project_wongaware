<h1>Merchants</h1>
<p class="btn btn--action">
  <a class="btn btn--action" href="/merchants/new">New merchant!</a>
</p>
<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  <% for merchant in @merchants %>
  <% if merchant.tags().length > 0 %>
      <%  action = "/merchants/transactions/#{merchant.id}"
        method = "GET"
        value = "Associated Transactions"
      else
        action = "/merchants/#{merchant.id}/delete"
        method = "POST"
        value = "delete"
      end %>
  <tr>
    <td><a href="/merchants/transactions/<%= merchant.id %>"><%= merchant.name %></a></td>
    <td><form action="<%=action%>" method="<%=method%>">
    <input class="btn btn--danger" type="submit" value="<%=value%>" /></form></td>
    <td><form action="/merchants/<%= merchant.id %>/edit" method="GET">
    <input class="btn btn--danger" type="submit" value="edit" /></form></td>
  </tr>
  <% end %>
</table>
