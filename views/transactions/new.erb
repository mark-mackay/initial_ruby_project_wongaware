<h1>New transaction</h1>

<form action="/transactions" method="post">
  <ul>
  <li>Select a merchant:</li>
  <li><select name="merchant_id">
      <% for merchant in @merchants %>
      <option value="<%= merchant.id %>"><%= merchant.name %></option>
      <% end %>
    </select></li>

  <li><label>Select a tag:</label></li>
    <li><select name="tag_id">
      <% for tag in @tags %>
      <option value="<%= tag.id %>"><%= tag.type %></option>
      <% end %>
    </select></li>
    <li><label for="amount">Enter Amount:</label><br>
        <input type="number" step="0.01" name="amount" id="amount" value="0.00"/></li>
        <li><label for="transaction_time">Enter Time(hh:mm):</label><br>
        <input type="time" name="transaction_time" id="transaction_time" value="12:00:00"/>
      </li>
      <li><label for="transaction_date">Enter Date:</label></li>
      <li><input type="date" name="transaction_date" id="transaction_date" value="12-12-2017"/>
      <br><br><hr><input class="btn btn--action" type='submit' value="Submit transaction!"></li>
    </ul>
</form>
