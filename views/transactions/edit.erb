<h1>Amend transaction</h1>

<form action="/transactions/<%=@transaction.id%>" method="post">
  <table>
  <tr>
  <td>Select a merchant:</td>
  <td><select name="merchant_id">
      <% for merchant in @merchants %>
      <% if merchant.id == @transaction.merchant_id %>
            <option value=<%= merchant.id %> selected><%= merchant.name %></option>
          <% else %>
            <option value="<%= merchant.id %>"><%= merchant.name %></option>
          <% end %>
      <% end %>
    </select></td>

  <td><label>Select a tag:</label></td>
    <td><select name="tag_id">
      <% for tag in @tags %>
      <% if tag.id == @transaction.tag_id %>
            <option value=<%= tag.id %> selected><%= tag.type %></option>
          <% else %>
            <option value="<%= tag.id %>"><%= tag.type %></option>
          <% end %>
      <% end %>
    </select></td>
  </tr>
  <tr>
    <td><label for="amount">Enter Amount:</label>
        <input type="number" step="0.01" name="amount" id="amount" value="<%= @transaction.amount %>"/></td>
        <td><label for="transaction_time">Enter Time(hh:mm):</label>
        <input type="time" name="transaction_time" id="transaction_time" value="<%= @transaction.transaction_time %>"/>
      </td>
      <td><label for="transaction_date">Enter Date:</label>
      <input type="date" name="transaction_date" id="transaction_date" value="<%= @transaction.transaction_date %>"/>
      <td><input class="btn btn--action" type='submit' value="Amend transaction!"><td>
    </tr>
  </table>
</form>
